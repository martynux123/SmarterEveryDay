<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2980b9</item>
        <item name="colorPrimaryDark">#236a99</item>
        <item name="colorAccent">#f39c12</item>


    </style>

    <style name="AppThemeBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">#236a99</item>
        <item name="colorPrimary">#2980b9</item>
        <item name="colorAccent">#ffffff</item>
    </style>

    <style name="AppThemeNoBar" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">#2980b9</item>
        <item name="colorPrimary">#3498db</item>
        <item name="colorAccent">#ffffff</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">#d9d9d9</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <!-- Used for the background -->
        <item name="android:background">#B53021</item>
    </style>
</resources>
